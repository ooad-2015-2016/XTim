@using Korpa387.Models
@model Korpa387.Models.Korisnik

@{
    ViewBag.Title = "Details";
}

<nav class="blue darken-2  hide-on-med-and-down marginDown">
    <div class="nav-wrapper">
        <ul class="left">
            <li class="bold"><a href="#">Početna</a></li>
        </ul>
        <ul class="right">
            @Html.Partial("_LoginPartial")
        </ul>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col s12 m10 offset-m1 l10 offset-l1 white kontenerProfila">
            
            <div class="row">
                <div class="col s6  m4 l3">
                    <img src="~/Images/logo.png" class="scale" />
                </div>
                <div class="col s6 m8 l9">
                    <h4>@Html.DisplayFor(model => model.ImePrezime)</h4>
                    @if (Session["LoggedUser"] != null)
                    {
                        if (((Korisnik)Session["LoggedUser"]).ID == ViewBag.id)
                        {
                            @Html.DisplayFor(model => model.Email)<br /><br />
                            <a href="@Url.Action("Edit", "Korisnik", new { id = Model.ID })" class="btn blue darken-2 waves-light waves-effect">Uredi</a>
                        }
                    }
                    
                </div>

            </div>
            <h5>@ViewBag.poruka</h5>
            <div class="row">
                @foreach (var item in ViewBag.recenzije)
                {
                    <div class="col s12 m12 l12">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">
                                    <a href="@Url.Action("Details","Proizvod", new { id = @item.Proizvod.ID })" class="white-text bold">
                                        @item.Proizvod.Naziv
                                    </a>
                                </span>
                                <p>
                                    @item.Tekst
                                </p>
                                <div class="card-action" style="padding: 15px 0 0 0;">
                                    
                                    @if(item.Ocjena == 1)
                                    {
                                        <p>Ocjena: 1/5</p>

                                    }
                                    else if (item.Ocjena == 2)
                                    {
                                        <p>Ocjena: 2/5</p>
                                    }
                                    else if (item.Ocjena == 3)
                                    {
                                        <p>Ocjena: 3/5</p>
                                    }
                                    else if (item.Ocjena == 4)
                                    {
                                        <p>Ocjena: 4/5</p>
                                    }
                                    else if (item.Ocjena == 5)
                                    {
                                        <p>Ocjena: 5/5</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

            
            

@model Korpa387.Models.Proizvod

@{
    ViewBag.Title = "Create";
}

<nav class="blue darken-2  hide-on-med-and-down marginDown">
    <div class="nav-wrapper">
        <ul class="left">
            <li class="bold"><a href="#">Početna</a></li>
        </ul>
        <ul class="right">
            @Html.Partial("_LoginPartial")
        </ul>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col s12 m10 offset-m1 l10 offset-l1 white kontenerProfila">

            @using (Html.BeginForm("Create", "Proizvod", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()    
                    <h4>Proizvod</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model=>model.ProizvodjacID,new { @value ="0" })
                

                    <div class="input-field">
                       <label>Naziv</label>
                        @Html.TextBox("Naziv")
                       
                    </div>
                    <div class="input-field">
                        <label>Barkod</label>
                        @Html.TextBox("Barkod")

                    </div>
                    <div class="input-field">
                        <label>Opis</label>
                        @Html.TextArea("Opis", new { @class = "materialize-textarea", @length = "300", @maxlenght = "300" })
                        
                        
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Objavi" class="btn btn-default" />
                        </div>
                    </div>
                
            }

        </div>
    </div>
</div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

@model Korpa387.Models.Proizvod
@{
    ViewBag.Title = "Edit";
}

<nav class="blue darken-2  hide-on-med-and-down marginDown">
    <div class="nav-wrapper">
        <ul class="left">
            <li class="bold"><a href="#">Početna</a></li>
        </ul>
        <ul class="right">
            @Html.Partial("_LoginPartial")
        </ul>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col s12 m10 offset-m1 l10 offset-l1 white kontenerProfila">

            @using (Html.BeginForm("Edit", "Proizvod", new { ReturnUrl = ViewBag.ReturnUrl, id = ViewBag.proizvod.ID }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.DatumObjave)
                @Html.HiddenFor(model => model.ProizvodjacID)

                <div class="form-horizontal">
                    
                    <div style="overflow: hidden; margin-bottom:20px;">
                        <h4 class="left" style="margin:0;">Uređivanje</h4>
                        <a href="!#" class="right btn waves-effect waves-light">Obriši</a>
                    </div>
                    <hr />
                    <div class="input-field">
                        <h5>Naziv</h5>
                        @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-field">
                        <h5>Barkod</h5>
                        @Html.EditorFor(model => model.Barkod, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Barkod, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-field">
                        <h5>Opis</h5>
                        @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "materialize-textarea", @length = "300", @maxlenght="300" } })
                        @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-field">
                        <h5>Fotografija</h5>
                        @Html.EditorFor(model => model.Fotografija, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fotografija, "", new { @class = "text-danger" })
                    </div>
                        

                    <br /><br />

                   
                            <input type="submit" value="Spremi" class="btn btn-default right" />
                     
                </div>
            }

            <div>
                @Html.ActionLink("Nazad", "Details", "Proizvod",new { id= ViewBag.proizvod.ID }, new { @class ="btn left wave-effect waves-light" })
            </div>


        </div>
    </div>
</div>
            
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

@using Microsoft.AspNet.Identity
@using Korpa387.Models
@if (Session["LoggedUser"] != null)
{
    using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm", @class = "" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav">
        <li class="bold">
            @Html.ActionLink("Dobrodošao " + ((Korisnik)Session["LoggedUser"]).ImePrezime + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li class="bold"><a href="javascript:document.getElementById('logoutForm').submit()">Odjava</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="bold">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="bold">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
